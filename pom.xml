    <groupId>kr.co.sunnyvale</groupId>
    <artifactId>oauth2</artifactId>
    <version>1.0-SNAPSHOT</version>


    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spring.version>4.1.6.RELEASE</spring.version>
        <spring.security.core.version>4.0.1.RELEASE</spring.security.core.version>
        <spring.security.oauth.version>2.0.6.RELEASE</spring.security.oauth.version>
        <jstl.version>1.2</jstl.version>
        <javax.servlet-api.version>3.1.0</javax.servlet-api.version>
        <javax.servlet.jsp-api.version>2.3.1</javax.servlet.jsp-api.version>
        <com.fasterxml.jackson.version>2.4.4</com.fasterxml.jackson.version>

        <!-- Miscellaneous Dependencies -->
        <log4j-core.version>2.1</log4j-core.version>

        <org.slf4j-version>1.7.2</org.slf4j-version>

        <!-- Mongo DB driver & Spring Data MongoDB -->
        <spring.data.mongodb.version>1.5.4.RELEASE</spring.data.mongodb.version>
        <mongodb.driver.version>2.12.3</mongodb.driver.version>

        <!-- Elasticsearch -->
        <elasticsearch.version>1.7.0</elasticsearch.version>
    </properties>

    <repositories>
        <repository>
            <id>springsource-repo</id>
            <url>http://repo.springsource.org/release</url>
        </repository>
        <repository>
            <id>jboss-repo</id>
            <url>https://repository.jboss.org/nexus/content/groups/public/</url>
        </repository>
        <repository>
            <id>spring-milestone</id>
            <name>Spring Maven MILESTONE Repository</name>
            <url>http://repo.spring.io/libs-milestone</url>
        </repository>
    </repositories>

